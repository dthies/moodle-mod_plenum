{{!
    @template plenumform_jitsi2/controls

    This template will render the Plenary meeting audio/video controls

    Variables required for this template:
    * instance - Plenary meeting instance record

    Variables optional for this template:

    Example context (json):
    {
        "sharevideo": true,
        "issharingvideo": true
    }

}}
<div>
    <div class="m-3">
        {{# sharevideo }}
        {{^ issharingvideo }}
        <button data-action="publish" class="btn btn-primary m-1">{{# str }} sharevideo, plenumform_deft {{/ str }}</button>
        {{/ issharingvideo }}
        {{# issharingvideo }}
        <button data-action="unpublish" class="btn btn-danger m-1">{{# str }} stopvideo, plenumform_deft {{/ str }}</button>
        {{/ issharingvideo }}
        {{/ sharevideo }}
        {{^ sharevideo }}
        <button disabled class="btn btn-primary m-1" title="{{# str }} videodisabled, plenumform_deft {{/ str }}">{{# str }} sharevideo, plenumform_deft {{/ str }}</button>
        {{/ sharevideo }}
    </div>
</div>
