{{!
    @template mod_plenum/motions

    This template will render the Plenary meeting main page

    Variables required for this template:
    * instance - Plenary meeting instance record
    * throttle - Deft socket throttle

    Variables optional for this template:

    Example context (json):
    {
        "responsive": true,
        "cmid": 3
    }
}}

{{< mod_plenum/motions }}
    {{$ controls }}
        <div class="m-3">
            <button disabled class="btn btn-primary m-1">{{# str }} sharevideo, plenumform_deft {{/ str }}</button>
        </div>
    {{/ controls }}
{{/ mod_plenum/motions }}
{{# js }}
    {{# userinfo }}
        document.querySelectorAll('[data-region="slot-{{ slot }}"] .card-header').forEach(function(h) {
            h.innerHTML = '{{ name }}';
        });
        {{# pictureurl }}
            document.querySelectorAll('[data-region="slot-{{ slot }}"] img').forEach(function(img) {
                img.src = '{{ pictureurl }}';
            })
        {{/ pictureurl }}
    {{/ userinfo }}
{{/ js }}
