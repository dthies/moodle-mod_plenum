{{!
    @template plenumform_deft/enable_audio

    This template will render the Plenary meeting audio control

    Variables required for this template:
    * contextid - Module contextid

    Variables optional for this template:

    Example context (json):
    {
       "contextid": 3
    }

}}
<div class="plenum-audio-control m-2">
    {{< core/toggle }}
        {{$ id }}enableaudio-{{ contextid }}{{/ id }}
        {{$ labelmarkup }}
            <label class="custom-control-label" for="enableaudio-{{ contextid }}" data-toggle="tooltip" data-placement="top" title="{{# str }} enableaudio_help, plenumform_deft {{/ str }}">
                <span class="">{{# str }} enableaudio, plenumform_deft {{/ str }}</span>
            </label>
        {{/ labelmarkup }}
        {{$ attributes }}
            data-contextid="{{ contextid }}"
        {{/ attributes }}
    {{/ core/toggle }}
</div>
