<%!
{{!
    @template plenumtype_resolve/mobile_edit_form

    This template will render the Plenary meeting mobile main motion form

    Variables required for this template:
    * contextid - Plenary meeting context id

    Variables optional for this template:

    Example context (json):
    {
        "contextid": 3
    }
}}
%>
<ion-list>
    <ion-item>
        <ion-label position="floating">
            {{ 'plugin.mod_plenum.name' | translate }}
        </ion-label>
        <ion-input
            value="<% name %>"
            [(ngModel)]="CONTENT_OTHERDATA.name"
        ></ion-input>
    </ion-item>
    <ion-item>
        <ion-label position="floating">
            {{ 'plugin.plenumtype_resolve.resolution' | translate }}
        </ion-label>
        <ion-label position="stacked" color="danger">
        <% error.resolution %>
        </ion-label>
        <ion-textarea
            label-placement="fixed"
            showError="true"
            autoGrow="true"
            rows="3"
            [(ngModel)]="CONTENT_OTHERDATA.resolution"
        ></ion-textarea>
    </ion-item>
    <%> mod_plenum/mobile_edit_warning %>
    <ion-item>
    <ion-button
        core-site-plugins-new-content
        component="mod_plenum"
        method="mobile_move"
        samePage="true"
        useOtherData
        [useOtherData]="['resolution', 'name']"
        [args]="{contextid: <% contextid %>, groupid: '<% groupid %>', type: 'resolve', submit: true}"
        [preSets]="{getFromCache: false, saveToCache: false, reusePending: false}"
    >
    <ion-label>
        {{ 'plugin.mod_plenum.move' | translate }}
    </ion-label>
    </ion-button>
    </ion-item>
</ion-list>
