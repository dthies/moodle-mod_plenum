<%!
{{!
    @template mod_plenum/mobile_main

    This template will render the Plenary meeting main page for app

    Variables required for this template:
    * instance - Plenary meeting instance record

    Variables optional for this template:

    Example context (json):
    {
        "contextid": 3,
        "instance": "{}"
    }
}}
%>
<%# instance %>
<%# groupmode %>
    <%> mod_plenum/mobile_groups %>
<%/ groupmode %>
<div <%^responsive%>class="-content-center"<%/responsive%> data-roomid="<% roomid %>" data-contextid="<% contextid %>">
    <div class="">
        <%> mod_plenum/mobile_motions %>
    </div>
</div>
<div class="bg-info" id="#current-motion">
</div>
<%/ instance %>
<plenum-motions></plenum-motions>
<%^ viewed %>
    <span
        core-site-plugins-call-ws-on-load
        name="mod_plenum_view_module"
        [params]="{contextid: <% contextid %>}"
        [preSets]="{getFromCache: 0, saveToCache: 0}"
        onSuccess="this.updateContent({cmid: <% cmid %>: courseid: <% courseid %>, viewed: true});"
    ></span>
<%/ viewed %>
<%{ media }%>
