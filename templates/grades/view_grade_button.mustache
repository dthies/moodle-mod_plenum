{{!
    @template mod_plenum/grades/view_grade_button

    Template which defines a forum post for sending in a single-post HTML email.

    Classes required for JS:
    * none

    Data attributes required for JS:
    * none

    Example context (json):
    {
        "contextid": 127,
        "cmid": 83,
        "name": "mod_plenum_view_grade",
        "groupid": 3,
        "groupid": 33,
        "gradingcomponent": "mod_plenum",
        "gradingcomponent-subtype": "plenum"
    }
}}
<button
    class="btn btn-secondary"
    data-grade-action="view"
    data-contextid="{{contextid}}"
    data-cmid="{{cmid}}"
    data-name="{{name}}"
    data-group="{{groupid}}"
    data-userid="{{userid}}"
    data-grading-component="{{gradingcomponent}}"
    data-grading-component-subtype="{{gradingcomponentsubtype}}"
    >
        {{#str}}viewgrades, forum{{/str}}
</button>
{{#js}}
    require(['mod_plenum/grades/grader'], function(Grader) {
    Grader.registerLaunchListeners();
    });
{{/js}}
