<%!
{{!
    @template mod_plenum/mobile_groups

    This template will render the Plenary meeting group selector for app

    Variables required for this template:

    Variables optional for this template:

    Example context (json):
    {
        "cmid": 3,
        "courseid": 3,
        "groups": [
            {
               "id": 3,
               "name": "Tuesday"
            }
        ],
        "selectedgroup": {
            "id": 3
        }
    }
}}
%>
<ion-list>
    <ion-item>
        <ion-select
            label="{{ 'plugin.mod_plenum.group' | translate }}"
            (ionChange)="updateContent({ cmid: <% cmid %>, courseid: <% courseid %>, group: $event.target.value })"
            value="<% selectedgroup.id %>"
        >
            <%# groups %>
                <ion-select-option value="<% id %>">
                    <% name %>
                </ion-select-option>
            <%/ groups %>
        </ion-select>
    </ion-item>
</ion-list>
