{{!
    @template mod_plenum/activity_report

    This template will render the Plenary meeting activity report of grading meeting

    Variables required for this template:
    * contextid - Plenary meeting context id

    Variables optional for this template:

    Example context (json):
    {
        "contextid": 7
    }

}}

<div>
    <div data-region="plenum-activity-report" data-contextid="{{ contextid }}">
        <h3>{{# str }} offeredmotions, mod_plenum {{/ str }}</h3>
        <div>
        {{^ motions}}
            <div class="card bg-warning">
                <div class="card-body">
                    {{# str }} none {{/ str }}
                </div>
            </div>
        {{/ motions }}
        {{# motions }}
            <div>
                {{> mod_plenum/report_motion }}
            </div>
        {{/ motions }}
       </div>
    </div>
</div>
