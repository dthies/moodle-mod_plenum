<%!
{{!
    @template mod_plenum/mobile_edit_warning

    This template will render checkbox to mobile edit form to replace
    existing motion

    Variables required for this template:
    * instance - Plenary meeting instance record

    Variables optional for this template:

    Example context (json):
    {
        "warning": true
    }
}}
%>
<%# warning %>
    <ion-item>
        <ion-checkbox
            name="warning"
            [(ngModel)]="CONTENT_OTHERDATA.warning"
        >
        </ion-checkbox>
        <ion-label>
        {{ 'plugin.mod_plenum.replacemotion' | translate }}</ion-label>
    </ion-item>
    <%# error.warning %>
    <ion-item>
        <ion-label position="stacked" color="danger">
        <% error.warning %>
        </ion-label>
    </ion-item>
    <%/ error.warning %>
<%/ warning %>
